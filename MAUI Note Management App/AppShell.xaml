<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_Note_Management_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MAUI_Note_Management_App.Views"
    Title="MAUI_Note_Management_App">
    <TabBar>
        <ShellContent
             Title="A Propos"
             ContentTemplate="{DataTemplate view:APropos}"
             Icon="icon_about" />
        <ShellContent
         Title="Notes"
         ContentTemplate="{DataTemplate view:Note}"
         Icon="icon_about" />
        <ShellContent
 Title="Liste Notes"
 ContentTemplate="{DataTemplate view:ListeNotes}"
 Icon="icon_about" />
    </TabBar>
</Shell>
